<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- Base Config Settings Form View -->
<record id="view_adhoc_base_configuration" model="ir.ui.view">
    <field name="name">adhoc.base.config.settings</field>
    <field name="model">adhoc.base.config.settings</field>
    <field name="inherit_id" ref="adhoc_base_setup.view_adhoc_base_configuration"/>
    <field name="arch" type="xml">
        <group string="Products">
            <label for="id" string="Common Features"/>
            <div name="product_features">
                <div name='module_product_dimensions'>
                    <field name="module_product_dimensions"
                        class="oe_inline"/>
                    <label for="module_product_dimensions"/>
                </div> 
                <div name='module_product_share_father_son'>
                    <field name="module_product_share_father_son"
                        class="oe_inline"/>
                    <label for="module_product_share_father_son"/>
                </div>            
                <div name='module_product_supplier_pricelist'>
                    <field name="module_product_supplier_pricelist"
                        class="oe_inline" readonly="1"/>
                    <label for="module_product_supplier_pricelist"/>
                </div>                
                <div name='module_product_unique'>
                    <field name="module_product_unique"
                        class="oe_inline"/>
                    <label for="module_product_unique"/>
                </div>               
                <div name='module_product_website_categ_search'>
                    <field name="module_product_website_categ_search"
                        class="oe_inline"/>
                    <label for="module_product_website_categ_search"/>
                </div>
            </div>                 
            <label for="id" string="Advance Features"/>
            <div name="product_advance_features">
                <div name='module_product_template_search_by_ean13'>
                    <field name="module_product_template_search_by_ean13"
                        class="oe_inline"/>
                    <label for="module_product_template_search_by_ean13"/>
                </div>  
                <div name='module_product_pack'>
                    <field name="module_product_pack"
                        class="oe_inline"/>
                    <label for="module_product_pack"/>
                </div>         
                <div name='module_product_salesman_group'>
                    <field name="module_product_salesman_group"
                        class="oe_inline"/>
                    <label for="module_product_salesman_group"/>
                </div>                    
                <div name='module_product_force_create_variants'>
                    <field name="module_product_force_create_variants"
                        class="oe_inline"/>
                    <label for="module_product_force_create_variants"/>
                </div>                        
                <div name='module_product_variant_imp'>
                    <field name="module_product_variant_imp"
                        class="oe_inline"/>
                    <label for="module_product_variant_imp"/>
                </div>
                <div name='module_partner_products_shortcut'>
                    <field name="module_partner_products_shortcut"
                        class="oe_inline"/>
                    <label for="module_partner_products_shortcut"/>
                </div>
                <div name='module_product_no_translation'>
                    <field name="module_product_no_translation"
                        class="oe_inline"/>
                    <label for="module_product_no_translation"/>
                </div>  
                <div name='module_partner_samples'>
                    <field name="module_partner_samples"
                        class="oe_inline"/>
                    <label for="module_partner_samples"/>
                </div>
                <div name='module_product_reference_required'>
                    <field name="module_product_reference_required"
                        class="oe_inline"/>
                    <label for="module_product_reference_required"/>
                </div> 
            </div>
            <label for="id" string="Import / Export and Reports"/>
            <div name="product_import_export">
                <div name='module_product_variant_csv_import'>
                    <field name="module_product_variant_csv_import"
                        class="oe_inline"/>
                    <label for="module_product_variant_csv_import"/>
                </div>
                <div name='module_product_catalog_aeroo_report'>
                    <field name="module_product_catalog_aeroo_report"
                        class="oe_inline"/>
                    <label for="module_product_catalog_aeroo_report"/>
                </div>   
            </div>
            <label for="id" string="Product Prices and Pricelist"/>
            <div name="product_advance_features">         
                <div name='module_product_price_currency'>
                    <field name="module_product_price_currency"
                        class="oe_inline"/>
                    <label for="module_product_price_currency"/>
                </div>            
                <div name='module_product_uom_prices'>
                    <field name="module_product_uom_prices"
                        class="oe_inline"/>
                    <label for="module_product_uom_prices"/>
                </div>    
                <div name='module_product_prices_update'>
                    <field name="module_product_prices_update"
                        class="oe_inline"/>
                    <label for="module_product_prices_update"/>
                </div>
                <div name='module_product_customer_price'>
                    <field name="module_product_customer_price"
                        class="oe_inline"/>
                    <label for="module_product_customer_price"/>
                </div>
            </div>    
        </group>
    </field>
</record>
</data>
</openerp>
