<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_general_configuration" model="ir.ui.view">
            <field name="name">General Settings</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
                <group position="after">
                    <group>
                        <label for="id" string="Partners Fields"/>
                        <div>
                            <div name="group_ref">
                                <field name="group_ref" class="oe_inline"/>
                                <label for="group_ref"/>
                            </div>
                            <div name="group_user_id">
                                <field name="group_user_id" class="oe_inline"/>
                                <label for="group_user_id"/>
                            </div>
                            <div name="group_city">
                                <field name="group_city" class="oe_inline"/>
                                <label for="group_city"/>
                            </div>
                            <div name="group_state_id">
                                <field name="group_state_id" class="oe_inline"/>
                                <label for="group_state_id"/>
                            </div>
                            <div name="group_country_id">
                                <field name="group_country_id" class="oe_inline"/>
                                <label for="group_country_id"/>
                            </div>
                        </div>
                    </group>                    
                </group>
            </field>
        </record>

    </data>
</openerp>
